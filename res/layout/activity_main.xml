<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:text="@string/text"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.751" />

    <TextView
        android:id="@+id/infoText"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:text="@string/infoText"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintStart_toStartOf="@+id/amarillo"
        app:layout_constraintTop_toBottomOf="@+id/amarillo" />

    <TextView
        android:id="@+id/dificultad"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:text="@string/option"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintStart_toEndOf="@+id/infoText"
        app:layout_constraintTop_toTopOf="@+id/infoText" />

    <Button
        android:id="@+id/velocidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="256dp"
        android:layout_marginTop="512dp"
        android:backgroundTint="#000000"
        android:text="@string/difficulty"
        android:textColor="#FFEBEE"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="608dp"
        android:backgroundTint="#000000"
        android:text="@string/start_button"
        android:textColor="#FFEBEE"
        android:textSize="14sp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/azul"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="7dp"
        android:backgroundTint="#0091EA"
        app:layout_constraintStart_toEndOf="@+id/verde"
        app:layout_constraintTop_toTopOf="@+id/verde" />

    <Button
        android:id="@+id/verde"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="70dp"
        android:backgroundTint="#00C853"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/amarillo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="7dp"
        android:backgroundTint="#FFD600"
        app:layout_constraintStart_toStartOf="@+id/verde"
        app:layout_constraintTop_toBottomOf="@+id/verde" />

    <Button
        android:id="@+id/rojo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:backgroundTint="#D50000"
        app:layout_constraintEnd_toEndOf="@+id/azul"
        app:layout_constraintTop_toTopOf="@+id/amarillo" />

    <Button
        android:id="@+id/comparar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="140dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#000000"
        android:text="@string/check_button"
        android:textColor="#FFEBEE"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/inicio"
        app:layout_constraintTop_toTopOf="@+id/inicio" />

</androidx.constraintlayout.widget.ConstraintLayout>